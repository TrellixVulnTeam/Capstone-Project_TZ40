<%- include('../partials/header.ejs')%>

<div class="center">
    <% if (user) { %>
    <h2>Welcome, <%= user.firstName %>. </h2>
    <h2>Please select some categories the interest you!</h2>
    <% } %>
    <br>

    <form id="preferences" action="/locations/ratings" method="GET" onchange="check()">
        <div class="row">

            <!--Club, Bar, Restaurant, Tour, Ocean, Beach, Spa, museum, Park, Art-->

            <div class="column">
                <input type="checkbox" name="prefs" id="club" value="club" style="display: none;"/>
                <label for="club"><img src="../images/club.jpg" class="checkboxImage" ><br>Club</label>
            </div>
            
            <div class="column">
                <input type="checkbox" name="prefs" id="ocean" value="ocean" style="display: none;"/>
                <label for="ocean"><img src="../images/ocean.jpg" class="checkboxImage"><br>Ocean</label>
            </div>
            
            <div class="column">
                <input type="checkbox" name="prefs" id="bar" value="bar" style="display: none;"/>
                <label for="bar"><img src="../images/bar.jpeg" class="checkboxImage"><br>Bar</label>
            </div>

            <div class="column">
                <input type="checkbox" name="prefs" id="restaurant" value="restaurant" style="display: none;"/>
                <label for="restaurant"><img src="../images/rest.jpg" class="checkboxImage"><br>Restaurant</label>
            </div>

            <div class="column">
                <input type="checkbox" name="prefs" id="tour" value="tour" style="display: none;"/>
                <label for="tour"><img src="../images/tour.jpg" class="checkboxImage"><br>Tour</label>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <input type="checkbox" name="prefs" id="spa" value="spa" style="display: none;"/>
                <label for="spa"><img src="../images/spa.jpg" class="checkboxImage"><br>Spa</label>
            </div>
            
            <div class="column">
                <input type="checkbox" name="prefs" id="beaches" value="beaches" style="display: none;"/>
                <label for="beaches"><img src="../images/beach.jpg" class="checkboxImage"><br>Beaches</label>
            </div>
            
            <div class="column">
                <input type="checkbox" name="prefs" id="museums" value="museums" style="display: none;"/>
                <label for="museums"><img src="../images/museum.jpg" class="checkboxImage"><br>Museums</label>
            </div>

            <div class="column">
                <input type="checkbox" name="prefs" id="park" value="park" style="display: none;"/>
                <label for="park"><img src="../images/park.jpg" class="checkboxImage"><br>Park</label>
            </div>

            <div class="column">
                <input type="checkbox" name="prefs" id="art" value="art" style="display: none;"/>
                <label for="art"><img src="../images/art.jpg" class="checkboxImage"><br>Art</label>
            </div>
        </div>

        <input type="submit" value="Done" id="btn" disabled>
    </form>
</div>


<%- include('../partials/footer.ejs')%>