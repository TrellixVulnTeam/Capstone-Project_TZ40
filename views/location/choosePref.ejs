<%- include('../partials/header.ejs')%>

<div class="center">
    <p>Select everything that you have any interest in!
        Press "Done" when you are finished!
    </p>
    <h1 id="pHeader"></h1>
    <br>

    <form id="preferences" action="/locations/ratings">
        <div class="row">
            <div class="column">
