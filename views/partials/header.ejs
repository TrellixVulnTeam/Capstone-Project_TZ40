<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Xpedition</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css"/>
        <script src="/javascript/script.js"></script>
    </head>
    <body>
        <nav>
            <a href="/"><img src="/images/logo.png" alt="logo" class="logo"></a><br>
             <%if(!user) {%>
            <a href="/users/new" class = "head">Create Account</a>
            <a href="/users/login" class="head">Login</a>
            <%}else{%>
            <a href="/users/profile" class="head">Profile</a>
            <a href="/users/logout" class="head">Logout</a>
            <% }%>
        </nav>

        <% if(errorMessages.length > 0) {%>
            <% errorMessages.forEach(message=>{%>
                <div class='error'>
                    <%=message%>
                </div>
                <%});%>
                    <%}%>
        
                        <% if(successMessages.length > 0) {%>
        
                            <% successMessages.forEach(message=>{%>
                                <div class='success'>
                                    <%=message%>
                                </div>
                                <%});%>
                                    <%}%>
     